@model JZsGreen.Models.Product

@{
    ViewData["Title"] = "Cập Nhật Sản Phẩm";
}

<div  style="padding:50px;">
    <h1>Cập Nhật Sản Phẩm</h1>
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-3">
            <div class="col-sm-10">
                <input asp-for="Id" hidden class="form-control" />
            </div>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="name" class=" col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="name" class="form-control" />
            </div>
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="price" class=" col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="price" class="form-control" />
            </div>
            <span asp-validation-for="price" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="quantity" class=" col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="quantity" class="form-control" />
            </div>
            <span asp-validation-for="quantity" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="unit" class=" col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="unit" class="form-control" />
            </div>
            <span asp-validation-for="unit" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="discount" class=" col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="discount" class="form-control" />
            </div>
            <span asp-validation-for="discount" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="summary" class=" col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="summary" class="form-control" />
            </div>
            <span asp-validation-for="summary" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Category!.name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="categoryId" class="form-control" asp-items="ViewBag.categoryID"></select>
            </div>
            <span asp-validation-for="categoryId" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Hình Ảnh Hiện Tại</label>
            <div class="col-sm-10">
                @foreach (var i in Model.images!)
                {
                    <img src="~/images/products/@i.fileName" height="80" style="margin-right:5px; background:white;" />
                }
            </div>
        </div>
        <div class="row mb-3">
            <label class=" col-sm-2 col-form-label">Chọn hình ảnh</label>
            <div class="col-sm-10">
                <input asp-for="files" class="form-control" multiple />
            </div>
            <span asp-validation-for="files" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label asp-for="description" class=" col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea id="basic-example" asp-for="description"></textarea>
            </div>
            <span asp-validation-for="description" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <input type="submit" value="Cập Nhật Sản Phẩm" class="btn btn-primary" />
        </div>
    </form>


    <a asp-action="Index">Quay về trang danh sách</a>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<!--TinyMCE : Word html-->
<script>
    tinymce.init({
        selector: '#mytextarea',
        plugins: [
            'a11ychecker', 'advlist', 'advcode', 'advtable', 'autolink', 'checklist', 'export',
            'lists', 'link', 'image', 'charmap', 'preview', 'anchor', 'searchreplace', 'visualblocks',
            'powerpaste', 'fullscreen', 'formatpainter', 'insertdatetime', 'media', 'table', 'help', 'wordcount'
        ],
        toolbar: 'undo redo | formatpainter casechange blocks | bold italic backcolor | ' +
            'alignleft aligncenter alignright alignjustify | ' +
            'bullist numlist checklist outdent indent | removeformat | a11ycheck code table help'
    });
</script>