@model JZsGreen.Models.Category

@{
    ViewData["Title"] = "Thêm Danh Mục Lớn";
}

<div style="padding:50px;">
    <h1>Thêm Danh Mục Lớn</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Id" hidden class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="name" class="control-label"></label>
        <input asp-for="name" class="form-control" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
    <br/>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary w-100" />
    </div>
</form>
<hr/>
<div>
    <a asp-action="Index">Quay lại trang danh sách</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
