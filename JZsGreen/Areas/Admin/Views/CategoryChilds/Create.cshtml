@model JZsGreen.Models.CategoryChild

@{
    ViewData["Title"] = "Thêm Danh Mục Nhỏ";
}

<div style="padding:50px;">
    <h1>Thêm Danh Mục Nhỏ</h1>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Id" hidden class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Tên Danh Mục</label>
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Danh Mục Lớn</label>
            <select asp-for="categoryId" class="form-control" asp-items="ViewBag.categoryId"></select>
        </div>
        <br/>
        <div class="form-group">
            <input type="submit" value="Thêm" class="btn btn-primary w-100" />
        </div>
    </form>

    <hr />
    <div>
        <a asp-action="Index">Quay về trang danh sách</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
