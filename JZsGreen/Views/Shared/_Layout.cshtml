<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/images/fixed/logoJZ.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JZsGreen.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/detail.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/DetailReadMore.js" asp-append-version="true"></script>
    <script src="~/js/ProductLoad.js" asp-append-version="true"></script>
    <script src="~/js/CartReload.js" asp-append-version="true"> </script>
    <script src="~/js/UserLogin.js" asp-append-version="true"></script>
    <script src="~/js/UserRegistration.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <script src="~/js/autoSearch.js" asp-append-version="true"></script>

</head>
<body>
  <div>
        <header>
            <nav id="navbar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-success border-bottom box-shadow mb-3 fixed-top">
                <div class="container-fluid container">
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">MSMS</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
                <div class="row" style="margin-top:3px; margin-bottom:3px;">
                    <div class="col-md-3 col-sm"></div>
                    <div class="col-md col-sm-8 col-xl">
                        <form asp-controller="Product" asp-action="Index" method="get" class="input-group inputSearch col" style="flex-wrap:nowrap; justify-content: center;">
                            <div id="search-autocomplete" style="width:100%;" class="form-outline">
                                <input type="search" value="@ViewData["GetData"]" style="height:100%" id="search" name="searchName" class="form-control textbox" placeholder="Tìm kiếm..." />
                            </div>
                            <button class="btn bg-warning">
                                <i class="fa fa-search"></i>
                            </button>
                        </form>
                    </div>
                    <div class="col-md-3 col-sm">
                    </div>
                </div>
            </nav>
        </header>


        @{
            @await Html.PartialAsync("_CartPartial")
        }
        <div id="height-body"></div>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <div id="space-footer"></div>
        <footer class="text-center text-lg-start text-dark w-100"
                style="background-color: #198754; position:absolute; bottom:0">
            <section class="text-white">
                <div class="container text-center text-md-start mt-5" style="padding:5px;">
                    <div class="row mt-3">
                        <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                            <h6 class="text-uppercase fw-bold">JZsGreen</h6>
                            <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                style="width: 60px; background-color: white; height: 2px" />
                            <p>
                                Chào mừng bạn đến với JZsGreen
                            </p>
                            <p>
                                Chúc bạn có 1 ngày thật vui vẻ và nhiều may mắn
                            </p>
                        </div>
                        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                            <h6 class="text-uppercase fw-bold">Lựa Chọn</h6>
                            <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                style="width: 60px; background-color: white; height: 2px" />
                            <p>
                                <a href="../Product/Index" class="text-white">Hàng Mới</a>
                            </p>
                            <p>
                                <a href="../Product?discount=Hàng+Giảm+Giá" class="text-white">Hàng Giảm Giá</a>
                            </p>
                        </div>
                        <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                            <h6 class="text-uppercase fw-bold">Liên Hệ</h6>
                            <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                style="width: 60px; background-color: white; height: 2px" />
                            <p>
                                <a href="https://www.facebook.com/profile.php?id=100031925508672" class="text-white">
                                    <i class="bi-facebook text-white"></i>  Thanh Phong
                                </a>
                            </p>
                            <p>
                                <a href="https://www.instagram.com/t.ph15?igsh=MTJiN2NvYWp0b2NtNA%3D%3D" class="text-white">
                                    <i class="bi-instagram text-white"></i>  Thanh Phong
                                </a>
                            </p>
                            <p>
                                <a href="tel:+84819003999" class="text-white">
                                    <i class="bi-phone text-white"></i> +84 819 003 999
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </section>
        </footer>
  </div>
    <div class="modal fade" id="UserLoginModal" tabindex="-1" role="dialog" data-bs-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <partial name="_UserLoginPartial" model="new LoginModel
        {
            UserName = String.Empty,
            Pass = String.Empty,
            RememberMe = false
        }">
    </div>

    <div class="modal fade" id="UserRegistrationModal" tabindex="-1" data-bs-backdrop="static" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <partial name="_UserRegistrationPartial" model="new RegistrationModel
        {
            Email = String.Empty,
            Password = String.Empty,
            ConfirmPassword = String.Empty,
            FullName = String.Empty,
            PhoneNumber = String.Empty,
            AcceptUserAgreement = false
        }">
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" data-bs-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" style="border-radius:16px; padding:5px;">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel">Đơn Hàng Của Bạn</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h5>
                        Để xem "Đơn hàng của bạn" vui lòng
                        nhập Số điện thoại đã đặt hàng
                    </h5>
                    <form asp-controller="Bills" asp-action="Index" method="get" class="input-group col" style="justify-content: center;margin-top:30px;">
                        <div id="search-autocomplete" class="form-outline input-container" style="width:100%; align-items:center;">
                             <i class="fa fa-phone icon"></i>
                            <input required minlength="10" maxlength="10" pattern="[0-9]{10}" type="search" value="@ViewData["GetPhone"]" name="searchPhone" class="input-field" placeholder="Nhập số điện thoại của bạn" />
                        </div>
                        <button class="btn btn-primary" style="width:100%; margin: 15px 0; color:white; font-weight:bold;"><i class="fa fa-search"></i> Tra cứu</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
    @{
        //await Html.RenderPartialAsync("_AuthScriptsPartial");
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

</body>
</html>
<style>
    /* Style the input container */
    .input-container {
        display: flex;
        width: 100%;
        margin-bottom: 15px;
    }

    /* Style the form icons */
    .icon {
        min-width: 50px;
        border: 0.5px solid;
        padding:11px;
        font-size:20px;
        font-weight:bold;
        text-align: center;
    }

    /* Style the input fields */
    .input-field {
        width: 100%;
        padding: 10px;
        outline: none;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }

</style>