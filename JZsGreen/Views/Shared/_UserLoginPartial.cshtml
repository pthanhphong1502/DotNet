@model JZsGreen.Models.LoginModel

<div class="modal-dialog modal-dialog-centered" tabindex="-1">
    <div class="modal-dialog row d-flex justify-content-center align-items-center" style="width:500px">
        <div class="modal-content" style="border-radius:16px">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Đăng Nhập</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="padding: 30px;">
                <div id="alert_placeholder_login">
                </div>
                <form id="UserLoginForm" asp-controller="UserAuth" asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="LoginInValid">
                    <div class="form-group row">
                        <input asp-for="UserName" placeholder="Email" class="form-control my-2">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <input asp-for="Pass" placeholder="Mật Khẩu" class="form-control my-2">
                        <span asp-validation-for="Pass" class="text-danger"></span>
                    </div>
                    <div class="form-group-row">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" checked>
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>
                    </div>
                </form>
            </div>
            <button type="button" id="login" name="login" class="btn btn-primary" style="margin:25px">Đăng Nhập</button>
        </div>
    </div>
</div>